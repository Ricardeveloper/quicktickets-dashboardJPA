<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="geAppPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.vaadin.demo.dashboard.model.Account</class>
        <class>com.vaadin.demo.dashboard.model.Permission</class>
        <class>com.vaadin.demo.dashboard.model.Authority</class>
        <class>com.vaadin.demo.dashboard.model.AccountLoginAttempts</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/geapp"/>
            <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="toplink.jdbc.user" value="root"/>
            <property name="toplink.jdbc.password" value="test"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/geapp"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.jdbc2.optional.MysqlDataSource"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="test"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/geapp"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.jdbc2.optional.MysqlDataSource"/>
            <property name="openjpa.ConnectionUserName" value="root"/>
            <property name="openjpa.ConnectionPassword" value="test"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/geapp"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.jdbc2.optional.MysqlDataSource"/>
            <property name="eclipselink.jdbc.user" value="root"/>
            <property name="eclipselink.jdbc.password" value="test"/>
        </properties>
    </persistence-unit>
</persistence>
